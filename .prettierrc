{
	"endOfLine": "lf",
	"printWidth": 80,
	"useTabs": true,
	"tabWidth": 2,
	"semi": true,
	"singleQuote": true,
	"requirePragma": false,
	"insertPragma": true,
	"proseWrap": "preserve",
	"embeddedLanguageFormatting": "auto",
	"overrides": [
		{ "files": "*.{cmp,page}", "options": { "parser": "html" } },
		{
			"files": ["*.json", "*.jsonc"],
			"options": { "printWidth": 100, "parser": "json" }
		},
		{
			"files": "*.{yaml,yml}",
			"options": {
				"useTabs": false,
				"tabWidth": 2,
				"singleQuote": false,
				"bracketSpacing": false
			}
		},
		{
			"files": "*.txt",
			"options": {
				"useTabs": false,
				"tabWidth": 2,
				"singleQuote": false,
				"bracketSpacing": false
			}
		},
		{
			"files": "*.md",
			"options": { "proseWrap": "always", "printWidth": 120, "tabWidth": 2 }
		}
	]
}
