# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# apply to all files
[*]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false
max_line_length = 80

# specific configuration for JavaScript files
[*.js]
tab_width = 2

# specific configuration for JSON files
[*.json]
tab_width = 2

# specific configuration for YAML files
[*.yaml]
indent_style = space
indent_size = 2

# specific configuration for TypeScript files
[*.ts]
tab_width = 2

# specific configuration for Shell scripts
[*.sh]
indent_size = 2

# indentation override for all JS under 'lib' or 'build'
[{**/lib/**,**/build/**}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# specific configuration for plain text files
[*.txt]
indent_style = unset
trim_trailing_whitespace = true
insert_final_newline = true

# configuration files (e.g., .editorconfig, .eslintrc, .babelrc, .prettierrc)
[{.*,.{json,js,mjs,cjs}}]
indent_style = tab
tab_width = 2

# specific configuration for HTML files
[*.html]
tab_width = 2

# specific configuration for EJS templates
[*.ejs]
tab_width = 2
